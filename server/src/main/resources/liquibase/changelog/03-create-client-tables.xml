<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="03-create-client-h2" author="lie zeilstra" context="jdbc">

        <createSequence cycle="false"
                        incrementBy="10"
                        sequenceName="clt_seq"
                        startValue="1"/>

        <createSequence cycle="false"
                        incrementBy="10"
                        sequenceName="pfe_seq"
                        startValue="1"/>

        <createTable tableName="client" >
            <column name="id" type="int">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="profile" >
            <column name="id" type="int">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="clt_id" type="int">
                <constraints nullable="false" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="public_key" type="varchar(4096)">
                <constraints nullable="true"/>
            </column>
            <column name="url" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="profile" baseColumnNames="clt_id" constraintName="pfe_clt_fk" referencedTableName="client"
                                 referencedColumnNames="id" />

    </changeSet>

</databaseChangeLog>